<h1>Editing courier</h1>
<p id="alert"><%= alert %></p>

<%= form_with(model: @courier, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_area :email %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Show', @courier %>
<%= link_to 'Back', couriers_path %>
