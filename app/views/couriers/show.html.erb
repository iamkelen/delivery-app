<% if notice %>
  <div class='alert alert-info'>
    <%= notice %>
  </div>
<% end %>

<div class='pb-3'>
  <h3>
    Hello, <%= @courier.name %>!
  </h3>
  <p><%= @courier.email %></p>
  <%= link_to 'Edit', edit_courier_path(@courier), :class => 'btn btn-primary'  %>
  <%= link_to 'Back', couriers_path, :class => 'btn btn-primary' %>
</div>

<div class='pb-3'>
  <h4>
  <%= @courier.name %>'s Packages
  </h4>
  <br />
  <%= link_to 'New',  new_courier_package_path(@courier), :class => 'btn btn-success'  %>
</div>

<div class='row'>
  <% @courier.packages.each do |package| %>
    <div class='col-3'>
      <div class='pb-3'>
        <div class='card-group'>
          <div class='card text-center bg-light'>
            <div class='card-body'>
              <div class='card-title'><%= package.tracking_number %></div>
              <div class='card-text'><%= package.humanized_delivery_status %></div>
              <br />
              <%= link_to 'Show', package_path(package), :class => 'btn btn-primary' %>
              <%= link_to 'Edit', edit_package_path(package), :class => 'btn btn-primary' %>
              <%= link_to 'Delete', package, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
