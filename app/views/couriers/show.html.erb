<%= link_to 'Back', couriers_path %>
<h3>
  <%= @courier.name %>
</h3>

<p id="notice"><%= notice %></p>
<p>
  <%= @courier.email %>
</p>

<%= link_to 'Edit', edit_courier_path(@courier)  %>

<h4>
  <%= @courier.name %>'s Packages
</h4>

<%= link_to 'New',  new_courier_package_path(@courier)  %>

<div>
  <ul>
    <% @courier.packages.each do |package| %>
      <li><%= package.tracking_number %></li>
      <li><%= package.humanized_delivery_status %></li>
      <%= link_to 'Show', package_path(package) %>
      <%= link_to 'Edit', edit_package_path(package) %>
      <%= link_to 'Delete', package, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </ul>
</div>
