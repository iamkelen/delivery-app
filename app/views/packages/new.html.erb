<h1>Create package</h1>
<p id="alert"><%= alert %></p>
<% if @package.errors.any? %>
  <div>
    <p><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</p>

    <ul>
      <% @package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: [:courier, @package], local: true) do |form| %>
  <div>
    <%= form.label :tracking_number %>
    <%= form.text_field :tracking_number %>
  </div>

  <div>
    <%= form.label :delivery_status %>
    <%= form.check_box :delivery_status %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', couriers_path %>
