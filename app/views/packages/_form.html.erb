<% if @package.errors.any? %>
  <div class="alert alert-danger">
    <p><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</p>

    <ul>
      <% @package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-6">
    <div class='pb-3'>
      <%= form_with(model: model, local: true) do |form| %>
      <div class='form-group'>
        <%= form.label :tracking_number, for: 'input_tracking_number' %>
        <%= form.text_field :tracking_number, id: 'input_tracking_number', class: 'form-control', placeholder: 'Enter tracking number', autofocus: true %>
      </div>

      <div class='form-check'>
        <%= form.check_box :delivery_status, id: 'check_delivery_status', class: 'form-check-input' %>
        <%= form.label :delivery_status, for: 'check_delivery_status', class: 'form-check-label' %>
      </div>
      <br />
      <div>
        <%= form.submit class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

